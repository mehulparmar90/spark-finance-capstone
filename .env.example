# Confluent Kafka Configuration
# Get these from Confluent Cloud > Cluster > API Keys
KAFKA_BOOTSTRAP=pkc-xxxxx.us-west-2.aws.confluent.cloud:9092
KAFKA_USERNAME=your-api-key-here
KAFKA_PASSWORD=your-api-secret-here
KAFKA_TOPIC=market.trades

# WebSocket Configuration (Exchange)
# Binance.US (use this if in USA or experiencing geographic restrictions)
WS_URL=wss://stream.binance.us:9443/ws/btcusdt@trade
EXCHANGE=binance.us

# Alternative: Use mock server for local testing
# WS_URL=ws://localhost:8765
# EXCHANGE=binance.mock

# Alternative: Binance.com (may be restricted in some locations)
# WS_URL=wss://stream.binance.com:9443/ws/btcusdt@trade
# EXCHANGE=binance

# Databricks Configuration
# Get these from Databricks > User Settings > Developer > Access Tokens
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token-here

# Databricks Cluster Configuration
DATABRICKS_CLUSTER_NAME=finance-capstone-cluster
DATABRICKS_RUNTIME_VERSION=17.3.x-scala2.12

# Unity Catalog Configuration
CATALOG_NAME=main
SCHEMA_NAME=finance_capstone

# Cloud Storage (Optional - configure if needed)
# GCP_PROJECT_ID=your-gcp-project
# GCP_DATASET=your-bigquery-dataset
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=your-s3-bucket

# Development Settings
DEBUG=True
LOG_LEVEL=INFO
